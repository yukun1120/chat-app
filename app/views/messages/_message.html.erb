  <div class="message_top">
    <div class="message_name">
      <%= message.user.name%>
    </div>
    <div class="message_date">
      <%= l message.created_at%>
    </div>
  </div>

  <div class="message_lower">
    <div class="message_text">
      <%= message.content%>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message_image', if message.image.attached? %>
  </div>